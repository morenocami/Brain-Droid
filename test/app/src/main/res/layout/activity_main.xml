<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity"
    android:id="@+id/activity_main">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shadow_height_value"
        android:id="@+id/shadow_height_value"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="96dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shadow_height_seekbar"
        android:id="@+id/shadow_height_seekbar"
        android:layout_below="@+id/enable_shadow_switch"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enable_shadow_switch"
        android:id="@+id/enable_shadow_switch"
        android:layout_below="@+id/change_color_button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change_color_button"
        android:id="@+id/change_color_button"
        android:layout_below="@+id/disabled_button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="disabled_button"
        android:id="@+id/disabled_button"
        android:layout_below="@+id/f_twitter_button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="f_twitter_button"
        android:id="@+id/f_twitter_button"
        android:layout_below="@+id/shadow_height_value"
        android:layout_alignParentStart="true" />

</RelativeLayout>
